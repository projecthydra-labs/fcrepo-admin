<h3><%= t("fcrepo_admin.datastreams.title") %></h3>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
	  <th scope="col"><%= t("fcrepo_admin.datastreams.header.id") %></th>
	  <th scope="col"><%= t("fcrepo_admin.datastream.profile.label") %></th>
    </tr>
  </thead>
  <tbody>
    <% object.datastreams.each do |dsid, ds| %>
      <%= content_tag :tr, :class => (ds.profile.empty? ? "warning" : "") do %>
	    <td>
		  <%= link_to dsid, fcrepo_admin.object_datastream_path(ds.pid, dsid) %>
        </td>
		<td>
	      <% unless ds.new? %>
	        <%= ds.profile["dsLabel"] %>
		  <% else %>
		    <em>Not persisted to Fedora</em>
		  <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
