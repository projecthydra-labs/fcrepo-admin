<h3><%= t("fcrepo_admin.object.associations.title") %>: <%= @association.name %></h3>

<% if @response.total > 0 %>
  <%= fcrepo_admin_solr_pagination_info @response %>
  <%= render_association_collection %>
  <%= fcrepo_admin_solr_pagination_links @response %>
<% else %>
  <div class="alert">
	No associated objects found.
  </div>
<% end %>
